<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
<Frame name="GearTrackerFrame" parent="UIParent" movable="true" enableMouse="true">
		<Size x="200" y="200" /> 
		<Anchors>
			<Anchor point="TOP" relativeTo="TargetFrame" relativePoint="BOTTOM">
				<Offset x="20" y="-20" />
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
        <Layers>
        <Layer level="ARTWORK">
			<Texture file="Interface\DialogFrame\UI-DialogBox-Header">
				<Size><AbsDimension x="256" y="64"/></Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="GearTrackerFrame" relativePoint="TOP">
						<Offset><AbsDimension x="0" y="-20"/></Offset>
					</Anchor>
				</Anchors>
			</Texture>
		</Layer>
		<Layer level="OVERLAY">
			<FontString name="$parentTitleString" inherits="GameFontNormal" text="Gear Tracker">
				<Size x="134" y="20" />
				<Anchors>
					<Anchor point="TOP" relativeTo="GearTrackerFrame" relativePoint="TOP">
						<Offset x="0" y="2" />
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="$parentCurrentGearSetString" inherits="GameFontNormal" text="">
				<Anchors>
					<Anchor point="TOP">
						<Offset x="0" y="-30" />
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
        <Frames>
                <CheckButton name="$parentSpec1Button" inherits="UIRadioButtonTemplate" text="Spec One">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-50" />
					</Anchor>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentSpec2Button" inherits="UIRadioButtonTemplate" text="Spec One">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-80" />
					</Anchor>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentSpec3Button" inherits="UIRadioButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-110" />
					</Anchor>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentSpec4Button" inherits="UIRadioButtonTemplate" hidden="false">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-140" />
					</Anchor>
				</Anchors>
			</CheckButton>
			<Button name="$parentAcceptButton" inherits="UIPanelButtonTemplate" text="Accept">
				<Size x="90" y="25"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-15" y="15" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GearTrackerAcceptButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
        </Frames>
        <Scripts>
			<OnLoad>
				GearTracker_OnLoad(self)
			</OnLoad>
			<OnEvent>
				GearTracker_OnEvent(self, event, ...)
			</OnEvent>
			<OnClick>
				GearTracker_OnClickFrame()
			</OnClick>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
    </Frame>
</Ui>